#include <math.h>
#include <stdio.h>
int main()
{
    float a, b, x;
    printf("Enter a -> ");
    scanf("%f", &a);
    printf("Enter b -> ");
    scanf("%f", &b);
    printf("Enter x -> ");
    scanf("%f", &x);

    if (!a && !b && !x)
        return 0;

    float x = 1.0f;
    printf("f(x) = ");
    if (a>b)
    {
        printf("%f * z= ", a-x || b+x);
    }
    if (b>a)
    {
        printf("%f * z= ", b-x || a+x);
    }
   
    if (a=b)
    {
        printf("parameters are equal\n");
    }
    return 0;
}
