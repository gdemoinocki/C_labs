#include <math.h>
#include <stdio.h>
int recur(int x, int y)
{
  if (x > y)
  {
     y = y * 2;
     recur(x, y);
  }
  else
     return ( y==x ) ? 1 : 0;
}
int cycle(int x, int y)
{
   while (x > y)
   {
     y = y * 2;
   }
   return ( y==x ) ? 1 : 0;
   }
int main()
{
  int p = 1;
  unsigned int n;
  printf("Enter number -> \n ");
  scanf("%u", &n);
  recur(n, p) == 1 ? (printf("Recursion: number is power of 2\n")) : (printf("Recursion: number is not power of 2\n"));
  cycle(n, p) == 1 ? (printf("Cycle: number is power of 2\n")) : (printf("Cycle: number is not power of 2\n"));
  return 0;
}

