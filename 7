#include <stdio.h>
#include <stdlib.h>
#include <time.h>
void step_1(int N, int array[][N])
{
    for (int i = 0; i < N; i++)
    for (int j = 0; j < N; j++)
    array[i][j] = rand() % 10;
}
void step_2(int N, int arr[][N])
{
    for (int i = 0; i < N; i++)
    {
        for (int j = 0; j < N; j++)
        printf("%8d", arr[i][j]);
        printf("\n");
    }
    printf("\n");
}
void step_3(int N, int A[][N], int B[][N], int C[][N])
{
    for (int i = 0; i < N; i++)
    for (int j = 0; j < N; j++)
    {
          C[i][j] = 0;
          for (int k = 0; k < N; k++)
          C[i][j] += A[i][k] * B[k][j];
    }
}
int main()
{
    srand(time(NULL));
    int N;
    printf("enter the size\n");
    scanf("%d", &N);
    int A[N][N], B[N][N], C[N][N];
    step_1(N, A);
    step_1(N, B);
    printf("first \n");
    step_2(N, A);
    printf("second \n");
    step_2(N, B);
    step_3(N, A, B, C);
    printf("result \n");
    step_2(N, C);
    return 0;
}
